<% if notes.exists? %>

<div class="mainStudentContent">
  <hr/>
  <section>
    <div class="moodsDiv">

     <!-- <h2>Moods</h2>  -->
        <div class="moodsSectionTitle">
          <span> Mood Breakdown <br/> by Number of <br/> Interactions </span>
        </div>
        <% if notes.has_emotion_moods? %>
          <div class="moodsVisualization">
              <%= mood_percent_image("good", "Happy", notes) %>
              <%= mood_percent_image("neutral", "Neutral", notes) %>
              <%= mood_percent_image("bad", "Sad", notes) %>
          </div>
          <div class="moodsNumeric">
              Happy: <%= mood_count_data("good", "Happy", notes) %> <br/>
              Neutral: <%= mood_count_data("neutral", "Neutral", notes) %> <br/>
              Sad: <%= mood_count_data("bad", "Sad", notes) %> <br/>
           </div>
      <% else %>
        <p>No moods recorded</p>
      <% end %>
      <!-- </div> -->
    </div>
  </section>
</div>

<hr/>
<div class="mainStudentContent">

  <ul class="nav nav-tabs">
  <li role="presentation" class="active">
      <a href="#public" aria-controls="public" role="tab" data-toggle="tab">Public</a>
  </li>
  <li role="presentation">
      <a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a>
  </li>

   <li role="presentation" class="dropdown" id="sortDropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
      Order By: <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li> Importance: High to Low </li>
      <li> Importance: Low to High </li>
      <li> Date: Recent to Oldest </li>
      <li> Date: Oldest to Recent </li>
      <li> Creator: Alphabetical </li>

    </ul>
    </ul>
</div>
  <section>
   <!--  <div class="sectionTitle">
    <span class="cardTitle" style="color:black;"> Comments </span>
  </div> -->
    <% if notes.has_text? %>
      <ul class="list-unstyled">
        <%= render notes.with_text %>
      </ul>
    <% else %>
      <p>No comments</p>
    <% end %>
  </section>
<% else %>
  <p><%= missing_msg %> for <%= student.given_name %>.</p>
  <p>Would you like to <%= link_to "make the first note", new_student_note_path(student), class: "normal-link" %>?</p>
<% end %>

</div>
