<li class="well note">
  <div class="noteHeader">
    <span class="noteHeaderItem-left"><strong>Creator: <%= note.author_name %></strong> </span>
    <span class="noteHeaderItem-middle"> Importance Level: <%= note.importance %> </span>
    <span class="noteHeaderItem-middle"> Mood:  <%= t(note.mood, scope: [:activerecord, :attributes, :note, :moods]) %> </span>
    <span class="noteHeaderItem-right"> <%= note.created_at.to_date.to_formatted_s(:long_ordinal) %> </span>
  </div>
  <hr/>
  <div class="note-text">
  <p><%= note.text %></p>
  </div>

  <p>
    <%= button_to "remove note", status_note_path(note), method: :put, form_class: "clearfix", class: "btn-link pull-right" %>
  </p>

  <p><%= button_to "Add Comment", new_note_comment_path(note.id), method: :get, class: "btn" %></p>

  <% note.comments.each do |comment| %>
    <div class="comment">
      <div class="noteHeader">
        <span class="noteHeaderItem"> Comment by: <%= comment.author_name %></span>
      </div>

      <br/>
      <p><%= comment.text %></p>
      <br/>

    </div>
  <% end %>
</li>